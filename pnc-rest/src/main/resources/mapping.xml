<?xml version="1.0" encoding="UTF-8"?>
<mappings xmlns="http://dozer.sourceforge.net"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://dozer.sourceforge.net
          http://dozer.sourceforge.net/schema/beanmapping.xsd">

    <configuration>
        <stop-on-errors>true</stop-on-errors>
        <date-format>MM/dd/yyyy HH:mm</date-format>
        <wildcard>true</wildcard>
    </configuration>

    <!-- Mapping domain entities to REST entities -->
    <mapping>
        <class-a>org.jboss.pnc.model.ProjectBuildConfiguration</class-a>
        <class-b>org.jboss.pnc.rest.mapping.ProjectBuildConfigurationRest</class-b>
        <field>
            <a>project.name</a>
            <b>projectName</b>
        </field>
        <field>
            <a>project.id</a>
            <b>projectId</b>
        </field>
    </mapping>

    <!-- Mappings for REST PUT stuff - update only listed fields -->
    <mapping wildcard="false">
        <class-a>org.jboss.pnc.model.ProjectBuildConfiguration</class-a>
        <class-b>org.jboss.pnc.model.ProjectBuildConfiguration</class-b>
        <field>
            <a>identifier</a>
            <b>identifier</b>
        </field>
        <field>
            <a>project.name</a>
            <b>project.name</b>
        </field>
    </mapping>

</mappings>